<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user.name}}!</h2>
  </div>
</div>
<div class="inventory">
    <h3>Your Inventory:</h3>
    <ul>
    {{#each user.invs}}
        <li>{{this.name}}: {{this.amount}} {{this.unit}}</li>
    {{/each}}
    </ul>
</div>

<div class="recipes">
    <h3>Your Recipes:</h3>
    <ul>
    {{#each user.recs}}
        <li>{{this.rec_name}}
            <ul>
            {{#each this.ing}}
                <li>{{this.name}}: {{this.amount}} {{this.unit}}</li>
            {{/each}}
            </ul>
        </li>
    {{/each}}
    </ul>
</div>

<script src="./js/profile.js"></script>
