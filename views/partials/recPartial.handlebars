<div class="card">
    <div class="card-header">
        Recipes
    </div>
    <div class="card-body">
        <ul>
            {{#each user.recs}}
                <li>{{this.rec_name}}
                    {{!-- get rid of this after your done --}}
                    <ul> 
                        Ingredients:
                    {{#each this.ings}}
                        <li>{{this.name}}: {{this.amount}} {{this.unit}}</li>
                    {{/each}}
                    </ul>
                    <ul>  
                        Steps:
                    {{#each this.steps}}
                        <li>{{this.number}}: {{this.text}}</li>
                    {{/each}}
                    </ul>
                </li>
            {{/each}}
        </ul>
    </div>
</div>
