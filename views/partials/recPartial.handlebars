<div class="card">
    <div class="card-header">
        Recipes
    </div>
    <div class="card-body">
        <ul>
            {{#each user.recs}}
                <li>{{this.rec_name}}
                    <ul>
                    {{#each this.ings}}
                        <li>{{this.name}}: {{this.amount}} {{this.unit}}</li>
                    {{/each}}
                    </ul>
                </li>
            {{/each}}
        </ul>
    </div>
</div>
