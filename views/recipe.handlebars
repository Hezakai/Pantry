{{#each user.recs}}
<img src="../../uploads/{{this.photo}}" width="200"></img>
<li>{{this.rec_name}}
    <ul>
        Ingredients:
        {{#each this.ings}}
        <li>{{this.name}}: {{this.amount}} {{this.unit}}</li>
        {{/each}}
    </ul>
    <ul>
        Steps:
        {{#each this.steps}}
        <li>{{this.number}}: {{this.text}}</li>
        {{/each}}
    </ul>
</li>
{{/each}}